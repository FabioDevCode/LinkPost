{
  "manifest_version": 3,
  "name": "LinkPost for LinkedIn",
  "version": "1.0.0",
  "description": "Ajoute un lien rapide vers les posts programm√©s sur LinkedIn.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png",
    "1024": "icons/icon1024.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
